@page "/"
@using VisitorApplication.Shared
@inject HttpClient Http

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn-uicons.flaticon.com/uicons-regular-rounded/css/uicons-regular-rounded.css">
</head>

<section class="col-12 text-white">
    <p class="display-5 text-center mt-2" id="licenseName">Sohngaardsholmsparken</p>
    <p class="text-center text-capitalize mt-0">En digital informationstavle</p>
</section>

<section class="wrapper container">
    <div id="categories" class="row justify-content-center text-center">
        <a class="btn btn-outline-light square col-5 m-1 d-flex align-items-center border-2" href="/nyheder">
            <div class="mx-auto">
                <i class="bi bi-newspaper"></i>
                <h2>Nyheder</h2>
            </div>
        </a>
        <div class="btn btn-outline-light square col-5 m-1 d-flex align-items-center border-2">
            <div class="mx-auto">
                <i class="bi bi-flower1"></i>
                <h2>Planter</h2>
            </div>
        </div>
        <div class="btn btn-outline-light square col-5 m-1 d-flex align-items-center border-2">
            <div class="mx-auto">
                <i class="bi bi-calendar-date"></i>
                <h2>Kalender</h2>
            </div>
        </div>
        <div class="btn btn-outline-light square col-5 m-1 d-flex align-items-center border-2">
            <div class="mx-auto">
                <i class="bi bi-app"></i>
                <h2>Place</h2>
            </div>
        </div>
        <div class="btn btn-outline-light square col-5 m-1 d-flex align-items-center border-2">
            <div class="mx-auto">
                <i class="bi bi-app"></i>
                <h2>Holder</h2>
            </div>
        </div>
    </div>

    <div>
        @if (testList == null)
        {
            <p><em>Loading...</em></p> }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var test in testList)
                    {
                        <tr>
                            <td>@test.ID</td>
                            <td>@test.Name</td>
                            <td></td>

                        </tr>
                    }
                </tbody>
            </table>}
    </div>
</section>

@functions
{ Test[] testList;

    protected async override Task OnInitializedAsync()
    {
        testList = await Http.GetFromJsonAsync<Test[]>("api/Test/TestList");
    } }
