@using ManagementPages.Functions
@using ManagementPages.Model
@inject IDbService _dbService

<div class="modal @ModalClass" tabindex="-1" role="dialog" style="display:@ModalDisplay">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Nyt opslag - @Category?.CategoryModel?.Title</h5>
                <button @onclick="() => Close()" type="button" class="close btn btn-secondary" data-dismiss="modal" aria-label="Close">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <div class="col-12 row modal-body">
                <div class="col-6">
                    <label for="title" class="form-label">Titel</label>
                    <input type="text" class="form-control" id="title" placeholder="" @bind-value="newPost.Title">
                </div>
                <div class="col-6">
                    <label for="author" class="form-label">Forfatter</label>
                    <input type="text" class="form-control" id="author" placeholder=""  @bind-value="newPost.Author">
                </div>
                <div class="mt-3" id="toolbar">
                    <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
                        <div class="btn-group me-2 " role="group" aria-label="First group">
                            <button type="button" class="btn btn-outline-secondary"><i class="bi bi-type-bold"></i></button>
                            <button type="button" class="btn btn-outline-secondary"><i class="bi bi-type-italic"></i></button>
                            <button type="button" class="btn btn-outline-secondary"><i class="bi bi-type-underline"></i></button>
                            <button type="button" class="btn btn-outline-secondary"><i class="bi bi-type-strikethrough"></i></button>
                        </div>
                        <div class="btn-group me-2" role="group" aria-label="Second group">
                            <button type="button" class="btn btn-outline-secondary"><i class="bi bi-list-ul"></i></button>
                            <button type="button" class="btn btn-outline-secondary"><i class="bi bi-list-ol"></i></button>
                        </div>
                        <div class="btn-group" role="group" aria-label="Third group">
                            <button type="button" class="btn btn-outline-secondary" data-bs-toggle="tooltip" data-bs-placement="top" title="Tilføj et billede"><i class="bi bi-image"></i></button>
                            <button type="button" class="btn btn-outline-secondary" data-bs-toggle="tooltip" data-bs-placement="top" title="Tilføj et lyd klip"><i class="bi bi-music-note-beamed"></i></button>
                        </div>
                    </div>
                </div>
                <div class="mt-3">
                    <label for="shortIntro" class="form-label">Kort intro</label>
                    <textarea class="form-control" id="shortIntro" rows="2"></textarea>
                </div>
                <div class="mt-3">
                    <label for="text" class="form-label">Tekst</label>
                    <input class="form-control" id="text" rows="8" @bind-value="newPost.Text">
                </div>
                <br />
                <div class="col-3 mt-3">
                    <label for="url" class="form-label">Link / URL</label>
                    <input type="text" class="form-control" id="url" placeholder="www.taldigital.dk">
                </div>
                <div class="col-3 mt-3">
                    <label for="urltext" class="form-label">Link Tekst</label>
                    <input type="text" class="form-control" id="urltext" placeholder="Tryk her for at læse mere.">
                </div>
                <div class="col-3 mt-3">
                    <label for="date" class="form-label">Offentlig dato</label>
                    <input type="date" class="form-control" id="date" placeholder="">
                </div>
                <div class="col-3 mt-3">
                    <label for="date2" class="form-label">Skal skjules dato</label>
                    <input type="date" class="form-control" id="date2" placeholder="">
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-danger" data-dismiss="modal" @onclick="() => Close()">Fortryd</button>
                <button type="submit" class="btn btn-secondary" data-dismiss="modal" @onclick="() => SaveAsDraftAndClose()">Gem som kladde</button>
                <button type="submit" class="btn btn-success" @onclick="() => SavePublishAndClose()">Gem</button>
            </div>
        </div>
    </div>
</div>


@if (ShowBackdrop)
{
    <div class="modal-backdrop fade show"></div>
}


@code {
    [Parameter]
    public ICategoryViewModel Category { get; set; }

    [Parameter]
    public EventCallback OnChangesMade { get; set; }

    public Post newPost = new Post();

    public string ModalDisplay = "none;";
    public string ModalClass = "";
    public bool ShowBackdrop = false;

    public void Open()
    {
        ModalDisplay = "block;";
        ModalClass = "Show";
        ShowBackdrop = true;
        StateHasChanged();
    }

    public void Close()
    {
        ModalDisplay = "none";
        ModalClass = "";
        ShowBackdrop = false;
        StateHasChanged();
    }

    public async Task SavePublishAndClose()
    {
        await Category.AddNewPost(newPost, Category.CategoryModel.CategoryId, true, _dbService);
        Category.Posts = await _dbService.GetPosts(Category.CategoryModel.CategoryId);
        newPost = new Post();
        Close();
        await OnChangesMade.InvokeAsync();
    }

    public void SaveAsDraftAndClose()
    {
        Category.AddNewPost(newPost, Category.CategoryModel.CategoryId, false, _dbService);
        newPost = new Post();
        Close();
        OnChangesMade.InvokeAsync();
    }
}
