@using ManagementPages.Functions
@using System.Reflection.Metadata.Ecma335
@inject IDbService _dbService

<div class="modal @ModalClass" tabindex="-1" role="dialog" style="display:@ModalDisplay">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Advarsel</h5>
                <button @onclick="() => Close()" type="button" class="close btn btn-secondary" data-dismiss="modal" aria-label="Close">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <div class="row modal-body">
                <p class="fw-bold">Er du sikker på at du vil slette "@Category?.CategoryModel.Title"</p>
            </div>
            <div class="col-10 mx-auto mb-3">
                <label for="title" class="form-label">Skriv "@Category?.CategoryModel.Title"</label>
                <input type="text" class="form-control" id="title" placeholder="" @bind-value="CategoryTitleToBeDeleted" @bind-value:event="oninput">
            </div>
            
            <div class="modal-footer ">
                <div class="mx-auto text-center">
                    <p>Dette kan ikke fortrydes. Er du sikker?</p>
                    <button type="button" class="btn btn-success" data-dismiss="modal" @onclick="() => Close()">Nej</button>
                    @if (Category != null && Category.CategoryModel.Title.Equals(CategoryTitleToBeDeleted, StringComparison.OrdinalIgnoreCase))
                    {
                        <button type="button" class="btn btn-danger" data-dismiss="modal" @onclick="() => DeleteAndClose()">Ja</button>
                    }
                    else
                    {
                        <button type="button" class="btn btn-danger" data-dismiss="modal" disabled>Ja</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


@if (ShowBackdrop)
{
    <div class="modal-backdrop fade show"></div>
}


@code {
    public string ModalDisplay = "none;";
    public string ModalClass = "";
    public bool ShowBackdrop = false;
    public ICategoryViewModel Category { get; set; }
    public string CategoryTitleToBeDeleted { get; set; }

    [Parameter]
    public EventCallback OnChangesMade { get; set; }

    public void Open(ICategoryViewModel category)
    {
        Category = category;
        ModalDisplay = "block;";
        ModalClass = "Show";
        ShowBackdrop = true;
        StateHasChanged();
    }

    public void Close()
    {
        ModalDisplay = "none";
        ModalClass = "";
        ShowBackdrop = false;
        StateHasChanged();
    }

    private async Task DeleteAndClose()
    {
        Close();

        // delete category from database
        await Category.DeleteCategory(_dbService);

        // notify edit category modal about changes (edit category modal will then notify the category overview,
        // which will re-fetch the categories from the database)
        await OnChangesMade.InvokeAsync();

        // reset input field in delete category modal
        CategoryTitleToBeDeleted = "";
    }
}
